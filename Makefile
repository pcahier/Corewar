SHELL		:= /bin/bash

################################################################################
# Start of system configuration section                                        #
################################################################################

NAME		:= manager
LIBFT		:= libft
ASM			:= asm
COREWAR		:= corewar
QUIET		:= @
MAKE		:= make

################################################################################
# End of system configuration section                                          #
################################################################################

################################################################################
# Start of files definition section                                            #
################################################################################

_LIBFT		:= libft/
_ASM		:= asm/
_COREWAR	:= corewar/

################################################################################
# End of files definition section                                              #
################################################################################

################################################################################
# Start of rules definition section                                            #
################################################################################

.PHONY: $(NAME) all $(LIBFT) $(ASM) $(COREWAR) clean fclean re

$(NAME): all

all: $(LIBFT) $(ASM) $(COREWAR)

$(LIBFT):
	$(QUIET)$(MAKE) -C $(_LIBFT)

$(ASM):
	$(QUIET)$(MAKE) -C $(_ASM)

$(COREWAR):
	$(QUIET)$(MAKE) -C $(_COREWAR)

clean:
	$(QUIET)$(MAKE) -C $(_LIBFT) $@
	$(QUIET)$(MAKE) -C $(_ASM) $@
	$(QUIET)$(MAKE) -C $(_COREWAR) $@

fclean: clean
	$(QUIET)$(MAKE) -C $(_LIBFT) $@
	$(QUIET)$(MAKE) -C $(_ASM) $@
	$(QUIET)$(MAKE) -C $(_COREWAR) $@

re: fclean all

################################################################################
# End of rules definition section                                              #
################################################################################
